extends layout

block content
  header
    nav
      .nav-wrapper
        a.brand-logo.center.logo-col-brand(href='/'){\ CODE GOBLINS /}
        a.button-collapse(href='#', data-activates='mobile-demo')
          i.mdi-navigation-menu
        ul.right.hide-on-med-and-down
          li(ng-show='user')
            a(href='/profile') Profile
          li
            a(href='components.html') Components
          li
            a(href='javascript.html') Javascript
          li(ng-show='user')
            a.waves-effect.waves-light(ng-click='logout()')
              i.tiny.mdi.mdi-account-check.right
              span Logout
          li(ng-hide='user')
            a.waves-effect.waves-light(ng-click='login()')
              i.tiny.mdi.mdi-account-key.right
              span Login

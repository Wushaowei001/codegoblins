extends layout

block content
  header
    nav
      .nav-wrapper
        a.brand-logo.center.logo-col-brand(href='/' dir-terminal-type="" duration='5000' remove-caret='5000') {\ CODE GOBLINS /}
        a.button-collapse(href='#', data-activates='mobile-demo')
          i.mdi-navigation-menu
        ul.right.hide-on-med-and-down
          li(ng-show='user')
            a.waves-effect.waves-light(href='/profile') Profile
          li(ng-show='user')
            a.waves-effect.waves-light(ng-click='logout()')
              i.tiny.mdi.mdi-account-check.right
              span Logout
          li(ng-hide='user')
            a.waves-effect.waves-light(ng-click='login()')
              i.tiny.mdi.mdi-account-key.right
              span Login
        ul.left.hide-on-med-and-down
          li
            a.waves-effect.waves-light(href='/browse') Browse
          li
            a.waves-effect.waves-light(href='/questions') Questions
          li
            a.waves-effect.waves-light(href='/review') Project Review
        ul#mobile-demo.side-nav
          li(ng-show='user')
            a.waves-effect.waves-light(ng-click='logout()')
              i.tiny.mdi.mdi-account-check.right
              span Logout
          li(ng-hide='user')
            a.waves-effect.waves-light(ng-click='login()')
              i.tiny.mdi.mdi-account-key.right
              span Login
          li
            a(href='/questions') Questions
          li
            a(href='javascript.html') Browse
          li(ng-show='user')
            a(href='/profile') Profile
  div(ui-view)

  footer.page-footer
    .container
      .row
        .col.l6.s12
          h5.white-text Code Goblins
          p.grey-text.text-lighten-4 Ask your code related questions, submit your projects for review.
        .col.l4.offset-l2.s12
          h5.white-text Hack it, Break it, Fix it.
          img(src='/images/goblin-work.png')
    .footer-copyright
      .container
        | Â© 2015 Copyright With Love By Stephens.
        a.grey-text.text-lighten-4.right(href='andela.co') Andela